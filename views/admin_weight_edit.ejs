<!DOCTYPE html>
<html>
<head>
  <title>SEPAKAT - Edit Weight Matrix</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-100 font-sans">
  <div class="flex h-screen overflow-hidden">
    <%- include('partials/admin_sidebar', { page: 'weights' }) %>
    
    <div class="flex-1 flex flex-col overflow-hidden">
      <header class="bg-white shadow-sm z-10 px-6 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-800">Edit Weight Matrix</h1>
        <a href="/admin/weights" class="text-gray-500 hover:text-gray-700"><i class="fas fa-times"></i> Cancel</a>
      </header>

      <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
        <% if (error) { %>
          <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700 flex items-start gap-3">
            <i class="fas fa-exclamation-circle mt-1"></i>
            <div>
              <div class="font-semibold">Error</div>
              <div class="text-sm"><%= error %></div>
            </div>
          </div>
        <% } %>
       <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-sm p-6">
          <form action="/admin/weights/<%= weight._id %>/update" method="POST" id="weightForm" class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Matrix Name</label>
              <input type="text" name="name" value="<%= weight.name %>" required
                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>
            <p class="text-sm text-gray-600">Pastikan batas min dan max antar range menempel tanpa celah dan tidak tumpang tindih.</p>
            
            <div id="grades-container" class="space-y-3">
              <% weight.grades.forEach(g => { %>
                <div class="grade-row bg-gray-50 p-3 rounded border border-gray-200 space-y-2">
                    <div class="flex gap-2 items-end">
                      <div class="flex-1 min-w-[80px]">
                        <label class="text-xs text-gray-500">Min Operator</label>
                        <select class="min-op w-full px-2 py-1 border border-gray-300 rounded text-sm">
                          <option value=">=" <%= g.minOperator === '>=' ? 'selected' : '' %>>≥ (Greater or Equal)</option>
                          <option value=">" <%= g.minOperator === '>' ? 'selected' : '' %>>\> (Greater Than)</option>
                        </select>
                      </div>
                      <div class="flex-1 min-w-[100px]">
                        <label class="text-xs text-gray-500">Min Value</label>
                        <input type="number" step="0.01" class="min-val w-full px-2 py-1 border border-gray-300 rounded text-sm" value="<%= g.min %>" required>
                      </div>
                      <span class="text-gray-400">to</span>
                      <div class="flex-1 min-w-[80px]">
                        <label class="text-xs text-gray-500">Max Operator</label>
                        <select class="max-op w-full px-2 py-1 border border-gray-300 rounded text-sm">
                          <option value="<=" <%= g.maxOperator === '<=' ? 'selected' : '' %>>≤ (Less or Equal)</option>
                          <option value="<" <%= g.maxOperator === '<' ? 'selected' : '' %>>\< (Less Than)</option>
                        </select>
                      </div>
                      <div class="flex-1 min-w-[100px]">
                        <label class="text-xs text-gray-500">Max Value</label>
                        <input type="number" step="0.01" class="max-val w-full px-2 py-1 border border-gray-300 rounded text-sm" value="<%= g.max %>" required>
                      </div>
                    </div>
                    <div class="flex gap-2">
                      <div class="flex-[2] min-w-[150px]">
                        <label class="text-xs text-gray-500">Label</label>
                        <input type="text" class="label-val w-full px-2 py-1 border border-gray-300 rounded text-sm" value="<%= g.label %>" required>
                      </div>
                      <div class="flex-[2]">
                        <label class="text-xs text-gray-500">Recommendation</label>
                        <input type="text" class="rec-val w-full px-2 py-1 border border-gray-300 rounded text-sm" value="<%= g.recommendation %>" required>
                      </div>
                      <button type="button" onclick="this.closest('.grade-row').remove()" class="text-red-400 hover:text-red-600 h-[34px] flex items-center">
                        <i class="fas fa-trash"></i> Remove
                      </button>
                    </div>
                </div>
              <% }) %>
            </div>

            <button type="button" onclick="addGrade()" 
                    class="w-full py-2 border-2 border-dashed border-gray-300 rounded-lg text-gray-500 hover:border-blue-500 hover:text-blue-500 transition flex items-center justify-center gap-2">
              <i class="fas fa-plus"></i> Add Grade Range
            </button>
            
            <div class="pt-4 border-t border-gray-100">
              <input type="hidden" name="jsonInput" id="jsonInput">
              <button type="submit" onclick="return prepareSubmission()" 
                      class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg shadow-lg transition">
                Update Matrix
              </button>
            </div>
            <div id="validationMessage" class="mt-3 p-3 rounded hidden"></div>
          </form>
        </div>
      </main>
    </div>
  </div>

  <script>
    function addGrade() {
      const container = document.getElementById('grades-container');
      const div = document.createElement('div');
      div.className = 'grade-row bg-gray-50 p-3 rounded border border-gray-200 space-y-2';
      
      div.innerHTML = `
        <div class="flex gap-2 items-end">
          <div class="flex-1 min-w-[80px]">
            <label class="text-xs text-gray-500">Min Operator</label>
            <select class="min-op w-full px-2 py-1 border border-gray-300 rounded text-sm">
              <option value=">=">≥ (Greater or Equal)</option>
              <option value=">">\> (Greater Than)</option>
            </select>
          </div>
          <div class="flex-1 min-w-[100px]">
            <label class="text-xs text-gray-500">Min Value</label>
            <input type="number" step="0.01" class="min-val w-full px-2 py-1 border border-gray-300 rounded text-sm" required>
          </div>
          <span class="text-gray-400">to</span>
          <div class="flex-1 min-w-[80px]">
            <label class="text-xs text-gray-500">Max Operator</label>
            <select class="max-op w-full px-2 py-1 border border-gray-300 rounded text-sm">
              <option value="<=">≤ (Less or Equal)</option>
              <option value="<">\< (Less Than)</option>
            </select>
          </div>
          <div class="flex-1 min-w-[100px]">
            <label class="text-xs text-gray-500">Max Value</label>
            <input type="number" step="0.01" class="max-val w-full px-2 py-1 border border-gray-300 rounded text-sm" required>
          </div>
        </div>
        <div class="flex gap-2">
          <div class="flex-[2] min-w-[150px]">
            <label class="text-xs text-gray-500">Label (e.g. Sangat Baik)</label>
            <input type="text" class="label-val w-full px-2 py-1 border border-gray-300 rounded text-sm" required>
          </div>
          <div class="flex-[2]">
            <label class="text-xs text-gray-500">Recommendation</label>
            <input type="text" class="rec-val w-full px-2 py-1 border border-gray-300 rounded text-sm" placeholder="e.g. Dapat dipromosikan" required>
          </div>
          <button type="button" onclick="this.closest('.grade-row').remove()" class="text-red-400 hover:text-red-600 h-[34px] flex items-center">
            <i class="fas fa-trash"></i> Remove
          </button>
        </div>
      `;
      
      container.appendChild(div);
    }

    function prepareSubmission() {
      const form = document.getElementById('weightForm');
      const name = form.querySelector('input[name="name"]').value;
      const rows = document.querySelectorAll('.grade-row');
      const msgDiv = document.getElementById('validationMessage');
      
      const grades = [];
      rows.forEach(row => {
        grades.push({
          min: parseFloat(row.querySelector('.min-val').value),
          max: parseFloat(row.querySelector('.max-val').value),
          label: row.querySelector('.label-val').value,
          recommendation: row.querySelector('.rec-val').value
        });
      });
      
      // Validate ranges
      const sorted = [...grades].sort((a, b) => a.min - b.min);
      for (let i = 0; i < sorted.length - 1; i++) {
        const current = sorted[i];
        const next = sorted[i + 1];
        // Check if there's a gap
        if (current.max < next.min) {
          msgDiv.className = 'p-3 rounded bg-red-50 border border-red-200 text-red-700 text-sm';
          msgDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> Ada gap antara range ${current.min}-${current.max} dan ${next.min}-${next.max}`;
          msgDiv.classList.remove('hidden');
          return false;
        }
        // Check if there's an overlap
        if (current.max > next.min) {
          msgDiv.className = 'p-3 rounded bg-red-50 border border-red-200 text-red-700 text-sm';
          msgDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> Ada tumpang tindih antara range ${current.min}-${current.max} dan ${next.min}-${next.max}`;
          msgDiv.classList.remove('hidden');
          return false;
        }
      }
      
      msgDiv.classList.add('hidden');
      const finalObj = {
        name: name,
        grades: grades
      };
      
      document.getElementById('jsonInput').value = JSON.stringify(finalObj);
      return true;
    }
  </script>
</body>
</html>
